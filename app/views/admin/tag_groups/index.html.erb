<div id="admin_tag_groups">
  <%= render 'admin/shared/flash_messages' %>
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h3>Tag groups</h3>
    <div class="btn-toolbar mb-2 mb-md-0">
      <%= link_to 'New', new_admin_tag_group_path, class: 'btn btn-primary' %>  
    </div>
  </div>
  <div>
    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Tags count</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @tag_groups.each do |tag_group| %>
          <tr>
            <td><%= tag_group.id %></td>
            <td><%= link_to tag_group.name, admin_tag_group_path(tag_group) %></td>
            <td><%= tag_group.tags_count %></td>
            <td>
              <%= link_to 'Edit', edit_admin_tag_group_path(tag_group), class: 'btn btn-primary btn-sm' %>
              <%= link_to 'Delete', admin_tag_group_path(tag_group), data: {method: :delete, confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
        <% if @tag_groups.blank? %>
          <tr>
            <td colspan="4">No record.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @tag_groups %>
  </div>
</div>
