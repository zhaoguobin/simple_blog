<div id="admin_categories">
  <%= render 'admin/shared/flash_messages' %>
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h3>Categories</h3>
    <div class="btn-toolbar mb-2 mb-md-0">
      <%= link_to 'New', new_admin_category_path, class: 'btn btn-primary' %>  
    </div>
  </div>
  <div>
    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Articles count</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= link_to category.name, admin_category_path(category) %></td>
            <td><%= category.articles_count %></td>
            <td>
              <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-primary btn-sm' %>
              <%= link_to 'Delete', admin_category_path(category), data: {method: :delete, confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
        <% if @categories.blank? %>
          <tr>
            <td colspan="4">No record.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @categories %>
  </div>
</div>
