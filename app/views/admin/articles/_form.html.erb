<%= form_for [:admin, @article] do |f| %>
  <%= render 'admin/shared/form_messages', form: f %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', tabIndex: 1 %>
  </div>
  <div class="form-group">
    <%= f.label :avatar %>
    <% if f.object.avatar.present? %>
      <div class="media mb-2">
        <%= image_tag f.object.avatar.thumb.url, class: 'img-thumbnail' %>
      </div>
    <% end %>
    <%= f.file_field :avatar, class: 'form-control', tabIndex: 2 %>
  </div>
  <div class="form-group">
    <%= f.label :abstract %>
    <%= f.text_area :abstract, class: 'form-control', tabIndex: 3 %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', tabIndex: 3 %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, 'Category' %>
    <%= f.collection_select :category_id, @categories, :id, :name, {}, {class: 'form-control', tabIndex: 5} %>
  </div>
  <%= f.submit 'Save', class: 'btn btn-primary', tabIndex: 6 %>
<% end %>
