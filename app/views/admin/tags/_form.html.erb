<%= form_for [:admin, @tag] do |f| %>
  <%= render 'admin/shared/form_messages', form: f %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', tabIndex: 1 %>
  </div>
  <div class="form-group">
    <%= f.label :avatar %>
    <% if f.object.avatar.present? %>
      <div class="media mb-2">
        <%= image_tag f.object.avatar.thumb.url, class: 'img-thumbnail' %>
      </div>
    <% end %>
    <%= f.file_field :avatar, class: 'form-control', tabIndex: 3 %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control', tabIndex: 2 %>
  </div>
  <div class="form-group">
    <%= f.label :tag_group_id, 'Tag group' %>
    <%= f.collection_select :tag_group_id, @tag_groups, :id, :name, {}, {class: 'form-control', tabIndex: 4} %>
  </div>
  <%= f.submit 'Save', class: 'btn btn-primary', tabIndex: 5 %>
<% end %>
