<% cache [article, article.category] do %>
  <div class="shadow-sm my-3 p-3 bg-white rounded">
    <h3>
      <%= link_to article.title, article_path(article), class: 'text-dark' %>
    </h3>
    <div class="row">
      <div class="col-md-4 article-item-image">
        <%= render 'articles/article_item_image', article: article %>
      </div>
      <div class="col-md-8 d-flex flex-column">
        <div class="d-none d-md-block text-secondary mb-auto">
          <%= link_to truncate(article.abstract, length: 150), article_path(article), class: 'text-secondary' %>
        </div>
        <div class="d-flex mt-2 mt-md-0">
          <%= link_to article.category.name, category_path(article.category), class: 'text-secondary mr-auto' %>
          <span class="text-secondary"><%= show_date(article.published_at) %></span>
        </div>
      </div>
    </div>
  </div>
<% end %>
